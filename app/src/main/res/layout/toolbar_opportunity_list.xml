<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ToolBarStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/navbg_withline">

    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_action_bar_default_height_material"
        android:paddingStart="2dp">

        <ImageView
            android:id="@+id/imgToolbarIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/logo_marketplace" />

        <ImageButton
            android:id="@+id/btnBackToolBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@color/md__transparent"
            android:paddingEnd="8dp"
            android:src="@drawable/back_icon"
            android:visibility="invisible"
            />

        <com.tenpearls.android.components.TextView
            android:id="@+id/txtMsgNumber"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/btnBackToolBar"
            android:gravity="center_vertical|left"
            android:text="No. 2 of 6"
            android:textColor="@color/whiteBackground"
            android:textSize="16sp"
            android:visibility="invisible"
            app:font_path_from_assets="@string/roboto_regular" />


        <ProgressBar
            android:id="@+id/progressBarHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/btnSearch"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/btnSearch"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="@color/md__transparent"
            android:src="@drawable/search"
            android:layout_marginTop="9dp"
            android:visibility="visible"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
</android.support.v7.widget.Toolbar>