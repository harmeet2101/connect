<resources>

    <!-- Base application theme. -->


    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowSoftInputMode">stateUnchanged|adjustResize</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <!-- Customize your theme here. -->


    <style name="ToolBarStyle" parent="">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>


    <style name="editTextStyle">

        <item name="android:padding">10dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey_light</item>
        <item name="android:gravity">left</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textSize">15sp</item>
        <item name="android:maxLength">40</item>
    </style>

    <style name="text_subject_bold">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="font_path_from_assets">@string/roboto_bold</item>
    </style>


    <style name="paragraph_title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">30sp</item>
        <item name="font_path_from_assets">@string/roboto_regular</item>
    </style>


    <style name="paragraph_text_large">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="font_path_from_assets">@string/roboto_regular</item>
    </style>

    <style name="paragraph_text_small_white">
        <item name="android:textColor">@color/whiteBackground</item>
        <item name="android:textSize">14sp</item>
        <item name="font_path_from_assets">@string/roboto_regular</item>
    </style>

    <style name="paragraph_text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="font_path_from_assets">@string/roboto_regular</item>
    </style>

    <style name="message_text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="font_path_from_assets">@string/roboto_light</item>
    </style>

    <style name="message_date">
        <item name="android:textColor">@color/text_color_light_gray</item>
        <item name="android:textSize">13sp</item>
        <item name="font_path_from_assets">@string/roboto_light</item>
    </style>

    <style name="header_text">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="font_path_from_assets">@string/roboto_regular</item>
    </style>

    <style name="status_text">
        <item name="android:textColor">@color/whiteBackground</item>
        <item name="android:textSize">12sp</item>
        <item name="font_path_from_assets">@string/roboto_regular</item>
    </style>

    <style name="job_position">
        <item name="android:textColor">@color/black</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">18sp</item>
        <item name="font_path_from_assets">@string/roboto_regular</item>
    </style>


    <style name="holo_red_button">
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:textColor">@drawable/holo_red_button_text_selector</item>
        <item name="android:background">@drawable/holo_red_button_selector</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="font_path_from_assets">@string/roboto_regular</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="red_button">
        <item name="android:background">@drawable/red_button_selector</item>
        <item name="font_path_from_assets">@string/roboto_regular</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="green_button">
        <item name="android:background">@drawable/green_button_selector</item>
        <item name="font_path_from_assets">@string/roboto_regular</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="actionbar_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/actionbar_button_bg_selector</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="font_path_from_assets">@string/roboto_regular</item>
    </style>

</resources>
